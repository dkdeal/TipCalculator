<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Tip Calculator</title>
        <script src="https://cdn.tailwindcss.com"></script>
    </head>

    <body>
        <div class="w-1/2 mx-auto mt-16">
            <h1 class="text-3xl">Tip Calculator</h1>
            <form method="POST">
                <div class="flex flex-col py-4">
                    <label>Bill Amount</label>
                    <input class="px-2 py-4 flex-1 border rounded bg-gray-100 shadow" type="text" name="billAmount" value="#(billAmount)" />
                </div>
                <div class="flex flex-col py-4">
                    <label>Tip Percentage (15)</label>
                    <input class="px-2 py-4 flex-1 border rounded bg-gray-100 shadow" type="text" name="tipPercent" value="#(tipPercent)" />
                </div>
                <div class="flex flex-col py-4">
                    <label>Tip Amount</label>
                    <input class="px-2 py-4 flex-1 border rounded bg-gray-100 shadow" type="text" name="tipAmount" value="#(tipAmount)" />
                </div>
                <div class="flex flex-col py-4">
                    <label>Total Amount</label>
                    <input class="px-2 py-4 flex-1 border rounded bg-gray-100 shadow" type="text" name="totalAmount" value="#(totalAmount)" />
                </div>
                <div class="flex justify-end py-4">
                    <button class="py-4 px-12 rounded text-white bg-gray-600 hover:bg-gray-500 shadow">Calculate</button>
                </div
            </form>
        </div>
    </body>
</html>
